@model DevOpsPortal.Models.LoginDetails

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" >
        <div class="inner white-bg" style="padding-left:5%">
            <div class="newdefaultlayout-content">
                <div class="LoginPage">
                    <div class="LoginPage-Form ">
                        <div id="LoginForm">
                            <div class="LoginControl-main">
                                <div class="container ">
                                    <div class="LoginControl-Content">
                                        <div class="LoginControl-SignIn">
                                            Sign In to HealthCare
                                        </div>
                                        <div class="Login_div">
                                            <div class="LoginControl-LabelColumn">
                                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-5" })
                                            </div>
                                            <div class=".col-md-7" style="text-align:left">
                                                @Html.EditorFor(model => model.Email)
                                                @Html.ValidationMessageFor(model => model.Email)
                                            </div>
                                        </div>
                                        <div class="Login_div">
                                            <div class="LoginControl-LabelColumn">
                                                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-5" })
                                            </div>
                                            <div class=".col-md-7" style="text-align:left">
                                                @Html.EditorFor(model => model.Password)
                                                @Html.ValidationMessageFor(model => model.Password)
                                            </div>
                                        </div>
                                        <div class="form-group" style="padding-top:5%;">
                                            <div class=".col-md-12" style="text-align:right;padding-right:25%;padding-top:15%;">
                                                <input type="submit" value="Login" class="button" style="border-radius:16px" />
                                            </div>
                                        </div>
                                    </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

