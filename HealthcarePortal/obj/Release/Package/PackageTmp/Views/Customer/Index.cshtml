@model IEnumerable<DevOpsPortal.Models.CustomerDetails>

<h4>Customers</h4>
<p>
    @Html.ActionLink("Create New Customer", "Create")
</p>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10" style="color:green">
        @ViewBag.Message
    </div>
</div>
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlternateContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualificationSummary)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlternateContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Specialty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QualificationSummary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CustomerId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId }, new { onclick = "return confirm('Are sure wants to delete?');" })
        </td>
    </tr>
}

    </table>
}
else
{
    <div class="form-group" style="height:30px;color:royalblue">
        <span class="glyphicon glyphicon-exclamation-sign"></span> Customer data not available. Please create.
    </div>
}
